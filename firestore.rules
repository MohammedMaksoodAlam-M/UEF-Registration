rules_version = '2';

// Firebase Firestore Security Rules for UEF Registration
service cloud.firestore {
  match /databases/{database}/documents {

    // Mail collection - for Trigger Email extension
    match /mail/{mailId} {
      allow write: if true;  // Allow email sending
      allow read: if false;  // No read access needed
    }

    // Events collection with nested users subcollection
    match /events/data {
      allow read: if true;  // Allow reading event data
      allow write: if true; // Allow updating users array

      // Nested users subcollection
      match /users/{userId} {
        allow read: if true;  // Allow reading registrations
        allow create: if true;  // Allow new registrations
        allow update, delete: if false;  // No updates/deletes
      }
    }

    // Root users collection (backup)
    match /users/{userId} {
      allow read: if true;  // Allow reading
      allow create: if true;  // Allow new registrations
      allow update, delete: if false;  // No updates/deletes
    }

    // Deny all other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
